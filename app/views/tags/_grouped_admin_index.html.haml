.tag_list.container_fluid
  .form-inline
    = form_tag(action) do
      = render partial: "grouped_admin_checkboxes", locals: { alpha_tags: alpha_tags }
      .admin_tag_actions
        .row.reorganize_tags
          = hidden_field_tag :current_post_type, @current_post_type
          .col-xs-4.input-group
            - if action.eql?("/tags/destroy")
              = button_tag t("tags.alpha_grouped_destroy.delete"), name: "delete_button", value: "delete", class: "btn btn-danger reorganize_buttons"
            - else
              = text_field_tag "new_name", nil, placeholder: t("tags.alpha_grouped_rename.rename_tag"), class: "form-control"
              = button_tag t("tags.alpha_grouped_rename.merge"), name: "merge_button", value: "merge", class: "btn btn-warning reorganize_buttons"